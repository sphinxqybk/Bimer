        const stopReadingBtn = document.getElementById('stop-reading');
        
        if (startReadingBtn) {
            startReadingBtn.addEventListener('click', () => this.startReading());
        }
        if (pauseReadingBtn) {
            pauseReadingBtn.addEventListener('click', () => this.pauseReading());
        }
        if (stopReadingBtn) {
            stopReadingBtn.addEventListener('click', () => this.finishReading());
        }
        
        // Quick add book button
        const addNewBookQuickBtn = document.getElementById('add-new-book-quick');
        if (addNewBookQuickBtn) {
            addNewBookQuickBtn.addEventListener('click', () => {
                // Scroll to add book section
                const addBookSection = document.getElementById('add-book-section');
                if (addBookSection) {
                    addBookSection.scrollIntoView({ behavior: 'smooth' });
                    // Focus on book title input
                    setTimeout(() => {
                        if (this.bookTitleInput) {
