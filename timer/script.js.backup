    confirmAction(message, title = '‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£') {
        return new Promise((resolve) => {
            this._resolveConfirm = (ans) => {
                this.hideConfirmModal();
                resolve(!!ans);
                this._resolveConfirm = null;
            };
            if (this.confirmTitle) this.confirmTitle.textContent = title;
            if (this.confirmMessage) this.confirmMessage.textContent = message;
            this.confirmModal?.classList.add('show');
            if (this.confirmModal) this.confirmModal.style.display = 'flex';

            // Fallback: if custom modal isn't visible, use native confirm
            setTimeout(() => {
                const modal = this.confirmModal;
                const visible = modal && modal.offsetParent !== null &&
                    window.getComputedStyle(modal).display !== 'none';
                if (!visible) {
                    const ans = window.confirm(`${title}\n\n${message}`);
                    this._resolveConfirm?.(ans);
                }
            }, 50);
        });
    }

